# JobFair Platform - Backend Environment Variables

# Security
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (leave empty for SQLite in dev, use PostgreSQL URL in production)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (leave empty for in-memory in dev, use Redis URL in production)
# REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated frontend origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
